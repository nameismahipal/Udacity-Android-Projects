<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    android:background="@drawable/border"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/widgetRecipeName"
            android:text="Nutella Pie"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/widgetRightArrow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dimen_48dp"
            android:padding="@dimen/dimen_8dp"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_round_arrow_forward_24px"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/widgetlistItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        tools:listitem="@layout/widget_list_item_view"
        android:divider="@drawable/divider"
        android:dividerHeight="@dimen/dimen_1dp"
        >

    </ListView>


</LinearLayout>